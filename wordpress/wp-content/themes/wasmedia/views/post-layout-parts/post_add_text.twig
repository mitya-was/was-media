{% import 'macros/was-macros.twig' as macros %}

<div class="{{ variables['text_editor_class'] }}" style="{{ variables['text_custom_style'] }}">
    <div class="{{ variables['text_layout_class'] }}">

        {% if variables['main_aside'] or variables['aside_options'] == 'chronology' %}
            <div class="{{ variables['aside_class'] }}">

                {% if variables['aside_options'] == 'incut' %}
                    <icon class="icon-i incut_attention badge badge-pill">i</icon>
                {% endif %}

                {% if variables['aside_options'] != 'chronology' %}
                    {{ variables['chooser_icons'] }}
                    {{ variables['main_aside'] }}
                    {{ variables['chooser_icons_alt'] }}
                {% else %}

                    {% if variables['main_aside_chronology']|length > 0 %}

                        {{ macros.get_chronology(variables) }}

                    {% endif %}

                {% endif %}

            </div>
        {% endif %}

        <div class="editor_offset editor_default">
            {{ variables['main_text'] }}

            {% if variables['main_tooltips']|length > 0 %}

                {{ macros.get_tooltips(variables) }}

            {% endif %}

        </div>

    </div>
</div>