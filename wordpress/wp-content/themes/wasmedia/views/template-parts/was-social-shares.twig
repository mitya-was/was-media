   target="_blank"
   data-component="link">
    <svg class="icon icon-sm" aria-hidden="true" role="img">
        <use href="#icon-wasted" xmlns:xlink="http://www.w3.org/1999/xlink"
             xlink:href="#icon-wasted"></use>
