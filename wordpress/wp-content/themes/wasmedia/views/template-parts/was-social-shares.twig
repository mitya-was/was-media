{% set telegram_url = "https://t.me/share/url?url=" ~ was_share_content_url | url_encode %}
{% set telegram_url = (was_share_content_text != '') ? telegram_url ~ "&text=" ~ was_share_content_text : telegram_url %}

<a data-component="link" href="{{ telegram_url }}"
   class="media-icons btn btn-tlg btn-lg btn-block col"
   rel="noopener noreferrer" target="_blank" role="link" aria-pressed="true">
    <svg class="icon icon-xs" aria-hidden="true" role="img">
        <use href="#icon-tlg" xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#icon-tlg"></use>
    </svg>
    Telegram
</a>

<a href="http://twitter.com/share?url={{ was_share_content_url | url_encode }}"
