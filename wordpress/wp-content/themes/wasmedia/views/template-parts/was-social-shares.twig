   target="_blank" rel="noopener noreferrer"
   data-component="link">
    <svg class="icon icon-xs" aria-hidden="true" role="img">
        <use href="#icon-fb" xmlns:xlink="http://www.w3.org/1999/xlink"
             xlink:href="#icon-fb"></use>
